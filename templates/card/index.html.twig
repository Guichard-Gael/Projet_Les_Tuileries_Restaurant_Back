                <th scope="col">Montant</th>
                <th scope="col">Acheté le</th>                 
                <th scope="col">Etat</th>                      
            </tr>
        </thead>
        <tbody>
            {# fills with fetch request #}
        </tbody>
    </table>


{% endblock %}

{% block javascripts %}
    <script defer src="{{ asset('assets/js/searchCard.js') }}"></script>   
{% endblock %}
